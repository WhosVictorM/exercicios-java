package model.entities;

public class Floors {
	protected int floors = 2;

	public Floors() {
	}

	public Floors(int floors) {
		this.floors = floors;
	}

	public int getFloors() {
		return floors;
	}

	public int witchFloor(int i, int apartments) {
		if (i == 2) {
			apartments = 3;
			return apartments;
		}
		if (i == 12) {
			apartments = 3;
			return apartments;
		}
		if (i == 13) {
			apartments = 2;
			return apartments;
		}
		if (i == 14) {
			apartments = 1;
			return apartments;
		}

		return apartments = 4;
	}

}
